{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Service Master",
  "version": "0.1.0",
  "identifier": "com.wanghao.service-master",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Service Master",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "decorations": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "wanghao",
    "category": "Developer Tool",
    "shortDescription": "macOS launchd 管理工具",
    "longDescription": "一款美观的 macOS launchd 图形化管理工具,用于管理本地开发服务。",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkS2V5",
      "endpoints": [
        "https://github.com/wanghao/mac-service-master/releases/latest/download/latest-release.json"
      ]
    }
  }
}
